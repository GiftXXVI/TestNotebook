@model TestNotebook.Models.Control

@{
    ViewBag.Title = "Details";
}

<div class="container">
    <h1>Control</h1>
    <h5>@Html.DisplayNameFor(model => model.Name)</h5>
    <h6 class="text-muted">@Html.DisplayFor(model => model.Name)</h6>
    <h4>Details</h4>
    <div class="card">
        <div class="card-body">
            <p>
                @Html.ActionLink("Create Question", "Create","Question", new {@controlid=Model.Id}, new {@class="btn btn-primary"})
            </p>
            <p class="card-text">
                <table class="table table-striped table-bordered">
                <tr>
                    <th>
                        Description
                    </th>
                    <th>Action</th>
                </tr>
                @foreach (var item in Model.Questions)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <div class="btn-group">
                                @Html.ActionLink("Edit", "Edit","Question", new { id=item.Id, @controlid=item.ControlId }, new {@class="btn btn-primary"})
                                @Html.ActionLink("Details", "Details","Question", new { id=item.Id, @controlid=item.ControlId }, new {@class="btn btn-primary"})
                                @Html.ActionLink("Delete", "Delete","Question", new { id=item.Id,  @controlid=item.ControlId }, new {@class="btn btn-primary"})
                            </div>
                        </td>
                    </tr>
                }
                </table>
            </p>            
        </div>
    </div>
    <br/>
    <div class="btn-group">
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new {@class="btn btn-primary"})
        @Html.ActionLink("Back to List", "Index",new {}, new {@class="btn btn-primary"})
    </div>
</div>
