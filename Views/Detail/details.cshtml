@model TestNotebook.Models.Detail

@{
        ViewBag.Title = "Details";
}

<div class="container">
        <h1>Detail</h1>
        <h4>Details</h4>
        <div class="card" style="width: 18rem;">
                <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(model=>model.Header.Title)</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(model => model.Field.Name)</h6>
                        <p class="card-text">
                        <dl class="dl-horizontal">
                                <dt>
                                                @Html.DisplayNameFor(model => model.Field.Screen):
                                </dt>
                                <dl>
                                                @Html.DisplayFor(model => model.Field.Screen.Name)<br />
                                </dl>
                                <dt>
                                                @Html.DisplayNameFor(model=>model.Question.Control)
                                </dt>
                                <dl>
                                                @Html.DisplayFor(model=>model.Question.Control.Name)<br />
                                </dl>
                                <dt>
                                                @Html.DisplayNameFor(model=>model.Question)
                                </dt>
                                <dl>
                                                @Html.DisplayFor(model=>model.Question.Description)<br />
                                </dl>
                                <dt>
                                                @Html.DisplayNameFor(model=>model.AnswerYN)
                                </dt>
                                <dl>
                                                @Html.DisplayFor(model=>model.AnswerYN)<br />
                                </dl>
                                <dt>
                                                @Html.DisplayNameFor(model=>model.AnswerText)
                                </dt>
                                <dl>
                                                @Html.DisplayFor(model=>model.AnswerText)<br />
                                </dl>
                                <dt>
                                                @Html.DisplayNameFor(model=>model.Result)
                                </dt>
                                <dl>
                                                @Html.DisplayFor(model=>model.Result.description)<br />
                                </dl>
                        </dl>
                        </p>
                        <div class="btn-group">
                                @Html.ActionLink("Edit", "Edit", new { @id = Model.Id,@HeaderId=Model.HeaderId }, new {@class="btn btn-primary"})
                                @Html.ActionLink("Back to List", "Details", "Header",new {@id=Model.HeaderId}, new
                                {@class="btn btn-primary"})
                        </div>
                </div>
        </div>
</div>
